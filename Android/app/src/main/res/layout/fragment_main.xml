<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="56dp"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="11">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/tyre"/>


        <com.github.anastr.speedviewlib.ProgressiveGauge
            android:id="@+id/speedLF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginEnd="10dp"
            app:sv_speedometerColor="@color/colorAccent" />



        <com.github.anastr.speedviewlib.ProgressiveGauge
            android:id="@+id/speedRF"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            app:sv_speedometerColor="@color/colorAccent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/tyre"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageButton
                android:id="@+id/play_btn"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/play"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/pause_btn"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/stop"
                android:background="@null"
                />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:weightSum="11">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/tyre"/>



        <com.github.anastr.speedviewlib.ProgressiveGauge
            android:id="@+id/speedLR"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            app:sv_speedometerColor="@color/colorAccent"/>


        <com.github.anastr.speedviewlib.ProgressiveGauge
            android:id="@+id/speedRR"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"
            app:sv_speedometerColor="@color/colorAccent" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/tyre"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageButton
                android:id="@+id/forward_btn"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/forward"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/reverse_btn"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/reverse"
                android:background="@null"
                />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>